<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_view_label_order_activity_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_value_order_activity_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="0"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_label_order_activity_main" />

    <Button
        android:id="@+id/button_plus_activity_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="+"
        app:layout_constraintStart_toEndOf="@+id/text_view_label_order_activity_main"
        app:layout_constraintTop_toBottomOf="@+id/text_view_label_order_activity_main" />

    <Button
        android:id="@+id/button_minus_activity_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="-"
        app:layout_constraintEnd_toStartOf="@+id/text_view_label_order_activity_main"
        app:layout_constraintTop_toBottomOf="@+id/text_view_label_order_activity_main" />

</android.support.constraint.ConstraintLayout>